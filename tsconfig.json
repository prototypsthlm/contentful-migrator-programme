{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "pretty": true,
    "target": "es5",
    "outDir": "./dist",
    "strict": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "lib/**/*",
    "bin/**/*",
    "src/**/*",
    "templates/**/*"
  ],
  "exclude": ["node_modules", "**/__tests__/*"]
}
